<uwsgi>
    <plugin>python34</plugin>
    <env>LC_ALL={{ locale }}</env>
    <username>{{ user }}</username>
    <uid>{{ user }}</uid>
    <gid>{{ group }}</gid>
    <socket>/run/uwsgi/app/{{ site }}/socket</socket>
    <pythonpath>{{ production_symlink }}/server</pythonpath>
    <virtualenv>{{ production_symlink }}/venv</virtualenv>
    <app mountpoint="/">
        <script>{{ project }}.wsgi:application</script>
    </app>
    <master />
    <enable-threads />
    <single-interpreter />
    <buffer-size>65535</buffer-size>
    <processes>10</processes>
    <harakiri>3600</harakiri>
    <reload-mercy>8</reload-mercy>
    <cpu-affinity>5</cpu-affinity>
    <stats>/tmp/stats.socket</stats>
    <max-requests>2000</max-requests>
    <limit-as>512</limit-as>
    <reload-on-as>256</reload-on-as>
    <reload-on-rss>192</reload-on-rss>
    <post-buffering />
    <no-orphans />
    <vacuum />
</uwsgi>
