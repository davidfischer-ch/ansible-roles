{{ seafile_app_directory }}/logs/ccnet.log
{
       {{ seafile_log_rotations_frequency }}
       dateext
       missingok
       rotate {{ seafile_log_rotations_max_count|int }}
       compress
       delaycompress
       nomail
       notifempty
       create 644 {{ seafile_daemon_user }} {{ seafile_daemon_group }}
       sharedscripts
       postrotate
              [ ! -f {{ seafile_app_directory }}/pids/ccnet.pid ] || kill -USR1 `cat {{ seafile_app_directory }}/pids/ccnet.pid`
       endscript
}

